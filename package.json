{
  "name": "react-stopwatch",
  "version": "1.1.1",
  "description": "A simple Stopwatch component for React",
  "main": "dist/index.js",
  "scripts": {
    "flow": "flow",
    "babel": "babel src/ --out-dir dist/",
    "example": "browserify -t babelify --debug example/index.js -o example/bundle.js",
    "build": "yarn run babel && npm run flow && yarn run example",
    "prepublish": "yarn run build",
    "eslint": "eslint ./src && eslint ./example",
    "test": "jest",
    "coverage": "jest --coverage",
    "snapshots": "jest -u"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/slorenzo/react-stopwatch.git"
  },
  "keywords": [
    "react",
    "component",
    "react-component",
    "components",
    "ui",
    "stopwatch"
  ],
  "author": "Sebastian Lorenzo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/slorenzo/react-stopwatch/issues"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/example/",
      "/dist/"
    ],
    "automock": false,
    "verbose": false,
    "testRegex": "\\.test\\.js$"
  },
  "homepage": "https://github.com/slorenzo/react-stopwatch",
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0 || ^16.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-register": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^16.1.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-flow-vars": "^0.5.0",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "flow-bin": "^0.69.0",
    "jest": "^22.4.3",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-test-renderer": "^16.3.1"
  },
  "dependencies": {
    "lodash.defaults": "^4.2.0",
    "radium": "^0.24.0"
  }
}
